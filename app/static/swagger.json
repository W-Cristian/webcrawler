                  },
                  "contact": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "reference_number": {
                        "type": "string"
                      },
                      "telephone": {
                        "type": "string"
                      }
                    }
                  },
                  "details": {
                    "type": "object",
